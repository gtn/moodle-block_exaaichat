<?xml version="1.0"?>
<ruleset name="MoodlePluginCIOverrides">
    <rule ref="Moodle" />

    <!-- Disable the specific sniff -->
    <exclude name="moodle.NamingConventions.ValidVariableName.VariableNameUnderscore" />
    <exclude name="moodle.Files.LineLength.TooLong" />

    <!-- Exclude vendor directory -->
    <exclude-pattern>vendor/*</exclude-pattern>
</ruleset>
